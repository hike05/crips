# Domain configuration
DOMAIN=example.com

# Let's Encrypt contact email
EMAIL=admin@example.com

# Forward proxy credentials
PROXY_USER=username
PROXY_PASS=secure_password

# CrowdSec bouncer API key (auto-generated by install.sh)
BOUNCER_KEY=

# REALITY configuration (optional)
# Set to true to enable REALITY protocol
ENABLE_REALITY=false

# REALITY domain for SNI routing (only if ENABLE_REALITY=true)
REALITY_DOMAIN=reality.example.com

# REALITY UUID (generate with: sing-box generate uuid)
REALITY_UUID=

# REALITY private key (generate with: sing-box generate reality-keypair)
REALITY_PRIVATE_KEY=

# REALITY short ID (generate with: openssl rand -hex 8)
REALITY_SHORT_ID=
